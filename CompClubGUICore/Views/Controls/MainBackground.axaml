<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompClubGUICore.MainBackground">

	<Grid Background="{DynamicResource MainBackg}">
		<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource MainBackgGradient}">
			<Border.OpacityMask>
				<ImageBrush Source="avares://CompClubGUICore/Assets/Group.png" DestinationRect="0 0 250 250" TileMode="Tile"/>
			</Border.OpacityMask>
		</Border>
	</Grid>
</UserControl>
