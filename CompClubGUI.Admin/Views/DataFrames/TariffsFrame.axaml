<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="clr-namespace:CompClubGUI.Admin"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompClubGUI.Admin.TariffsFrame">
	<Grid RowDefinitions="Auto,*">
		<Grid Grid.Row="0" Margin="10,4">
			<TextBox x:Name="FilterTextBox" Watermark="Поиск по названию или сумме" HorizontalAlignment="Left" TextChanged="FilterTextBox_TextChanged"/>
			<Button Content="Добавить" HorizontalAlignment="Right" Click="AddButton_Click"/>
		</Grid>
		<Grid x:Name="DataListGrid" Grid.Row="1"/>
	</Grid>
</UserControl>
